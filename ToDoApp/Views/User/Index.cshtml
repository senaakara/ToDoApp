@model IEnumerable<User>

@{
    ViewData["Title"] = "Kullanıcılar Listesi";
}

<h2>Kullanıcılar</h2>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

