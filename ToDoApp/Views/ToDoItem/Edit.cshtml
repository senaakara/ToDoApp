@model ToDoItem

@{
    ViewData["Title"] = "Edit ToDo Item";
    var users = ViewData["Users"] as List<SelectListItem>;
}

<h2>Edit ToDo Item</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Başlık</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">Son Tarih</label>
        <input asp-for="DueDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsCompleted" class="form-check-label">Tamamlandı mı?</label>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <label for="UserId" class="form-label">Kullanıcı Seçin</label>
            <select asp-for="UserId" class="form-control" asp-items="users"></select>
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Update</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
